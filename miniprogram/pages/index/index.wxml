<view id="meetingPage">
  <view id="selection">
    <view id="officePicker">
      <van-dropdown-menu active-color="{{color.dpink}}">
        <van-dropdown-item value="{{ office }}" options="{{ officeList }}" />
        <van-dropdown-item title="{{date}}" value="{{ date }}" id="datePicker">
          <van-calendar show-title="{{false}}" color="{{color.dpink}}" poppable="{{ false }}" show-confirm="{{ false }}"  bind:select="confirmDate" class="calendar" />
        </van-dropdown-item>
        <van-dropdown-item id="moreCondition" title="{{conditionStr}}">
          <van-cell title="选择楼层">
            <van-slider class="slider" value="{{ floor }}" use-button-slot bind:drag="chooseFloor" min="1" max="28" active-color="{{color.dpink}}">
              <view class="custom-button" slot="button">{{ floor }}</view>
            </van-slider>
          </van-cell>
          <van-cell title="最少容纳人数">
            <van-slider class="slider" value="{{ pplNum }}" use-button-slot bind:drag="choosePplNum" min="10" max="50" step="10" active-color="{{color.dpink}}">
              <view class="custom-button" slot="button">{{ pplNum }}</view>
            </van-slider>
          </van-cell>
          <van-cell title="设备筛选">
            <van-checkbox-group value="{{ result }}" bind:change="getDevice" class="checkGroup">
              <view style="display: flex;">
                <van-checkbox name="电视" shape="square" class="checkItem" checked-color="{{color.lpink}}">电视</van-checkbox>
                <van-checkbox name="投影" shape="square" class="checkItem" checked-color="{{color.lpink}}">投影</van-checkbox>
              </view>
              <view style="display: flex;">
                <van-checkbox name="桌子" shape="square" class="checkItem" checked-color="{{color.lpink}}">桌子</van-checkbox>
                <van-checkbox name="椅子" shape="square" class="checkItem" checked-color="{{color.lpink}}">椅子</van-checkbox>
              </view>
            </van-checkbox-group>
          </van-cell>
          <view class="btn-container">
            <van-button type="default" bind:click="resetCondition" color="{{color.green}}">
              重置
            </van-button>
            <van-button type="default" bind:click="confirmCondition" color="{{color.dpink}}">
              确认
            </van-button>
          </view>
        </van-dropdown-item>

      </van-dropdown-menu>
    </view>
    <view id="datePicker">

    </view>
    <view id="roomSearch">
      <van-search value="{{ value }}" placeholder="请输入会议室名称关键词" show-action bind:search="onSearch" bind:cancel="onCancel" />
    </view>
  </view>


</view>