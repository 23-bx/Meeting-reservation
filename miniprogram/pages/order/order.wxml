<!--pages/order/order.wxml-->
<view id="order">
  <van-toast id="van-toast" />
  <van-cell id="msg">
    <view slot="title" id="title">
      <view class="pic">
        <image src="../../images/tabbar/meeting-room.jpg" mode="widthFix"></image>
      </view>
      <view class="basic">
        <van-icon name="location-o" color="{{color.dpink}}" size="40rpx" />
        <span>{{roomMsg.office_name+roomMsg.floor+'F'}}</span>
      </view>
      <view class="basic">
        <van-icon name="friends-o"  color="{{color.dpink}}" size="40rpx" />
        <span>{{roomMsg.chair}}</span>
      </view>
      <view class="device">
        <van-tag plain color="{{color.dorange}}" wx:for="{{roomMsg.device}}" wx:for-item="dName" wx:key="index">{{dName}}</van-tag>
      </view>
      
    </view>
  </van-cell>
  <van-cell title="会议日期" value="{{ date }}" bind:click="showCalender" is-link></van-cell>
  <van-calendar show="{{ showCal }}" color="{{color.dpink}}" bind:close="closeCalender" bind:select="confirmDate" />
  <van-cell title="开始时间" value="{{ startTime }}" bind:click="showStartTime" is-link></van-cell>
  <van-popup show="{{ showStartTime }}" bind:close="closeStartTime" position="bottom">
    <van-datetime-picker type="time" value="{{ startTime }}" filter="{{ filter }}" 
    min-hour="9" max-hour="17" bind:confirm="chooseStartTime" bind:cancel="closeStartTime"/>
  </van-popup>
  <van-cell title="结束时间" value="{{ endTime }}" bind:click="showEndTime" is-link></van-cell>
  <van-popup show="{{ showEndTime }}" bind:close="closeEndTime" position="bottom">
    <van-datetime-picker type="time" value="{{ endTime }}" filter="{{ filter }}" 
    min-hour="9" max-hour="17" bind:confirm="chooseEndTime" bind:cancel="closeEndTime"/>
  </van-popup>
  <van-field value="{{ userName }}" label="姓名" placeholder="请输入用户名" bind:change="getUserName"/>
  <van-field value="{{ userId }}" type="number" label="工号" placeholder="请输入工号" bind:change="getUserId"/>
  <van-button bindclick="order" block class="orderBtn" color="{{color.dpink}}">立即预约</van-button>
</view>

