.timeList .timeBox{
  min-height: 60rpx;
  line-height: 60rpx;
  width: 79%;
  /* border-bottom: 1px dashed #e79796; */
  border: 1px solid #e79796;
  margin: 5rpx auto;
  color: #ff8383;
  text-align: center;
  font-size: 23rpx;
}
.timeList .timeBox view{
  height: 45rpx;
  line-height: 45rpx;
}
.timeList .timeBox.active{
  background-color: #ffeedf;
}
.timeList .timeBox.choosed{
  background-color: #e89a9a;
  color: #fff;
}
.tip{
  font-size: 22rpx;
}